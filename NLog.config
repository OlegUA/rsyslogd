<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogFile="nlog-internal.log">
	<!--internalLogLevel="Off" -->

	<!-- optional, add some variables
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  See https://github.com/nlog/nlog/wiki/Configuration-file
  for information on customizing logging rules and outputs.
    add your targets here
    See https://github.com/nlog/NLog/wiki/Targets for possible targets.
    See https://github.com/nlog/NLog/wiki/Layout-Renderers for the possible layout renderers.
    Write events to a file with the date in the filename.
    <target xsi:type="File" name="f" fileName="${basedir}/logs/${shortdate}.log"
            layout="${longdate} ${uppercase:${level}} ${message}" />
    add your logging rules here

    Write all events with minimal level of Debug (So Debug, Info, Warn, Error and Fatal, but not Trace)  to "f"
    <logger name="*" minlevel="Debug" writeTo="f" />
    -->
	<variable name="LogHome" value="${basedir}/Log"/>
	<variable name="AppLogPath" value="${LogHome}/syslog_${shortdate}.log"/>
	<!--
  <variable name="DailyDir" value="${LogHome}/${date:format=yyyy}-${date:format=MM}-${date:format=dd}"/>
  <variable name="HourlyArchive" value="${DailyDir}/${date:format=HH}-Archive/${level}-${logger}-{#######}-archived.a"/>
  <variable name="AppLogPath" value="${DailyDir}/AB_GW_${shortdate}.log"/>
  -->

	<targets>
		<target name="AppAsyncTarget" xsi:type="AsyncWrapper" queueLimit="30000">
			<target xsi:type="RetryingWrapper" retryDelayMilliseconds="1500" retryCount="3">
				<target xsi:type="File"
						fileName="${AppLogPath}"
						encoding="utf-8"
						layout="${longdate} ${level:uppercase=true:padding=-5} ${callsite} : ${message}"
						archiveFileName="${LogHome}/archive/arch_${archiveSuffixFormat}.zip"
						archiveEvery="Day"
						archiveAboveSize="10000000"
						maxArchiveFiles="5"
						enableFileDelete="false"
						maxArchiveDays="30"
						archiveSuffixFormat="yyyy-MM-dd_HH-mm-ss"
			 />
			</target>
		</target>
	</targets>
	<rules>
		<logger name="*" minlevel="Debug" writeTo="AppAsyncTarget" />
	</rules>
</nlog>
